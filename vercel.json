{
  "version": 2,
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/server.js"
    },
    {
      "src": "/robots.txt", 
      "dest": "/api/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/health",
      "dest": "/api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/server.js"
    }
  ],
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    }
  }
} 